<div class="top-row navbar navbar-dark">
    <a class="navbar-brand" href="">
        <img src="icon-report.svg" class="img-fluid" alt="Icon" style="display: inline"/>
        <span class="nav-logo-name">ReportsService</span>
    </a>
    <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi"  aria-hidden="true"><Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.Home"></Icon></span>
                <Span Style="font-size:large">Home</Span>
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="problems">
                <span class="oi" aria-hidden="true"><Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.Tasks"></Icon></span>
                <Span Style="font-size: large">Problems</Span>
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="employees">
                <span class="oi" aria-hidden="true"><Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.Wheelchair"></Icon></span>
                <Span Style="font-size: large">Employees</Span>
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="reports">
                <span class="oi" aria-hidden="true"><Icon Name="Blazorise.Icons.FontAwesome.FontAwesomeIcons.PencilAlt"></Icon></span>
                <Span Style="font-size: large">Reports</Span>
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

}